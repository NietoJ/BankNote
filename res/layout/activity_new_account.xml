<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewAccount" >

    <TextView
        android:id="@+id/newAccountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Account" />

    <EditText
        android:id="@+id/newAccountFullName"
        android:hint="Enter Account Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newAccountTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/newAccountBalance"
        android:hint="Enter initial balance (e.g. 127.50)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newAccountFullName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:ems="10" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newAccountBalance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Create Account" 
        android:onClick="attemptCreateAccount"/>

</RelativeLayout>